
public class Recursion {
	public static int function(int num){
		int fact=1;
		if(num>1){
			fact+=fact*num;
			function(num-1);	
		}
		
		return fact;
	} 

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		/*for(int i=1;i<=100;i++){
			System.out.print(i+"\t");*/
		System.out.println(function(5));
		}		
	}


